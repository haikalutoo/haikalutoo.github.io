  "main": "index.js",
  "scripts": {
    "build:css": "cleancss src/css/style.css -o assets/css/style.min.css -O2 --compatibility ie8",
    "build:js": "uglifyjs src/js/script.js -o assets/js/script.min.js --compress --mangle",
    "build:html": "html-minifier index.src.html -o index.html --remove-script-type-attributes --use-short-doctype --remove-redundant-attributes --collapse-whitespace --remove-comments --remove-tag-whitespace --minify-css true --minify-js true",
    "build": "pnpm build:css && pnpm build:js && pnpm build:html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
